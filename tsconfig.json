{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es2017"
    ],
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "test"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
